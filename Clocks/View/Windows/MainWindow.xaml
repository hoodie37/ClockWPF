<Window x:Class="Clocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clocks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Секундная стрелка -->

        <!-- Контейнер -->
        <Border x:Name="SecondArrow" HorizontalAlignment="Center" 
        Width="2" Padding="0,15,0,0" RenderTransformOrigin="0.5,0.5">
            <Grid>
                <!-- Указатель -->
                <Border  BorderBrush="Black"  HorizontalAlignment="Stretch" 
            VerticalAlignment="Top" Background="#65737e" Height="180" Margin="0,20,0,0"/>
                <!-- /Указатель -->
                
            </Grid>
        </Border>
        <!-- /Контейнер -->

        <!-- /Секундная стрелка -->
    </Grid>
</Window>
