                    <Border HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="300"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <TextBlock Text="10" FontSize="60" FontWeight="Bold" 
                           RenderTransformOrigin="0.5,0.5" FontFamily="Book Antiqua"
                           VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#343d52">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="-300"/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>

                        </TextBlock>
                    </Border>
                    <!-- /Цифра 10 -->
                    <!-- Цифра 11 -->
                    <Border HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="330"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <TextBlock Text="11" FontSize="60" FontWeight="Bold" 
                           RenderTransformOrigin="0.5,0.5" FontFamily="Book Antiqua"
                           VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#343d52">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="-330"/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>

                        </TextBlock>
                    </Border>
                    <!-- /Цифра 11 -->
                    <!-- Цифра 12 -->
                    <Border HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="360"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <TextBlock Text="12" FontSize="60" FontWeight="Bold" 
                           RenderTransformOrigin="0.5,0.5" FontFamily="Book Antiqua"
                           VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#343d52">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="-360"/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>

                        </TextBlock>
                    </Border>
                    <!-- /Цифра 12 -->
                </Grid>
                <!--/Расположение цифр -->
                
                <!-- Секундная стрелка -->
                <Border x:Name="SecondArrow" HorizontalAlignment="Center" 
                Width="2" Padding="0,15,0,0" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform Angle="{Binding SecondAngle}" />
                    </Border.RenderTransform>
                    <Grid>
                        <!-- Указатель -->
                        <Border  BorderBrush="Black"  HorizontalAlignment="Stretch" 
                         VerticalAlignment="Top" Background="#343d52" Height="135" Margin="0,70,0,0"/>
                        <!-- /Указатель -->
                    </Grid>
                </Border>
                <!-- /Секундная стрелка -->
                <!-- Минутная стрелка -->
                <Border x:Name="MinuteArrow" HorizontalAlignment="Center" 
                Width="6" Padding="0,15,0,0" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform Angle="{Binding MinuteAngle}" />
                    </Border.RenderTransform>
                    <Grid>
                        <!-- Указатель -->
                        <Border  BorderBrush="Black"  HorizontalAlignment="Stretch" 
                         VerticalAlignment="Top" Background="#343d52" Height="135" Margin="0,70,0,0"/>
                        <!-- /Указатель -->

                    </Grid>
                </Border>
                <!-- /Минутная стрелка -->
                <!-- Часовая стрелка -->
                <Border x:Name="HoursArrow" HorizontalAlignment="Center" 
                Width="6" Padding="0,15,0,0" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform Angle="{Binding HourAngle}" />
                    </Border.RenderTransform>
                    <Grid>
                        <!-- Указатель -->
                        <Border  BorderBrush="Black"  HorizontalAlignment="Stretch" 
                         VerticalAlignment="Top" Background="#343d52" Height="85" Margin="0,120,0,0"/>
                        <!-- /Указатель -->

                    </Grid>
                </Border>
                <!-- /Часовая стрелка -->
            </Grid>
        </Border>        
    </Grid>
</Window>
